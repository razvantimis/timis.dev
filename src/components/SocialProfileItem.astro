---
import { Icon } from "astro-icon";
export interface Props {
  url: string;
  title: string;
}

const { title, url } = Astro.props;
---

<li class="flex list-none relative">
  <a class="p-1" href={url} target="_blank" aria-label={title + "profile"}>
    <slot>Icon</slot>
  </a>
  <span
    class="tooltip absolute pointer-events-none bg-white px-3 py-1 bottom-[90%] left-1/2 z-50 opacity-0 whitespace-nowrap"
  >
    {title || "Social link"}
  </span>
</li>

<style lang="scss">
  li {
    .tooltip {
      visibility: hidden;
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
      transform: translate3d(-50%, 0, 0);
      transition: 0.35s cubic-bezier(0.165, 0.84, 0.44, 1);
      border-radius: 3px;

      &:after {
        content: "";
        position: absolute;
        width: 0;
        height: 0;
        border-top: 6px solid #fff;
        border-right: 6px solid transparent;
        border-left: 6px solid transparent;
        bottom: -6px;
        left: 50%;
        transform: translateX(-50%);
      }
    }
    &:hover {
      .tooltip {
        opacity: 1;
        visibility: visible;
        bottom: calc(100% + 5px);
      }
    }
  }
</style>
