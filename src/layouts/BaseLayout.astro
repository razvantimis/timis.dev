---
import { SITE } from "~/config.mjs";
import BasicScripts from "~/components/BasicScripts.astro";
export interface Props {
	meta: {
		title: string;
	};
}

const {
	meta: { title },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="motion-safe:scroll-smooth md:text-[20px] 2xl:text-[24px]">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - {SITE.name}</title>
	</head>
	<body
		class="flex flex-col h-[100vh] w-full antialiased text-gray-900 dark:text-slate-300 tracking-tight bg-slate-200 dark:bg-slate-800"
	>
		<slot />
		<BasicScripts />
	</body>
</html>
